{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "homes": {
      "$home": {
        "accounts": {
          ".indexOn": ["accountType"]
        },
        "budgets": {
          "month": {
            ".indexOn": "validityPeriod"
          }
        },
        "entries": {
          ".indexOn": ["monthString","budgetKey","account/key", "searchName"]
        },
        "regular": {
          ".indexOn": ["cycle"]
        }
      }
    },
    ".read": "auth != null",
    ".write": "auth != null"
  }
}
